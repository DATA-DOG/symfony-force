{% extends 'AppBundle::layout.html.twig' %}

{% set title = "Account profile" %}

{% block content %}

{% include 'AppBundle::flashes.html.twig' %}

<div class="well content">

  <div class="page-header">
    <h1>{{ title }}</h1>
  </div>

  {{ form_start(form, {action: path('app_user_profile')}) }}
    <h4>{{ 'form.profile.section.details'|trans }}</h4>
    <hr>
    {{ form_row(form.firstname) }}
    {{ form_row(form.lastname) }}

    <h4>{{ 'form.profile.section.password'|trans }}</h4>
    <hr>
    {{ form_row(form.plainPassword) }}

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-4">
        <button type="submit" name="_submit" id="_submit" class="btn btn-primary btn-lg">{{ 'form.profile.submit'|trans }}</button>
      </div>
    </div>
  {{ form_end(form) }}
</div>
{% endblock %}
