{% extends '::layout.html.twig' %}

{% set title = "Reset password" %}

{% block content %}

{% include '::flashes.html.twig' %}

<div class="well content">

  <div class="page-header">
    <h1>{{ title }}</h1>
  </div>

  {{ form_start(form, {action: path('app_user_reset')}) }}
    {{ form_row(form.email) }}

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-4">
        <button type="submit" name="_submit" id="_submit" class="btn btn-primary btn-lg">{{ 'form.reset.submit'|trans }}</button>
      </div>
    </div>
  {{ form_end(form) }}
</div>
{% endblock %}
