{% extends 'AppBundle::layout.html.twig' %}

{% block content %}

{% include 'AppBundle::flashes.html.twig' %}

<div id="carousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    {% for banner in range(0, 1) %}
      <li data-target="#carousel" data-slide-to="{{ banner }}" {% if banner == 0 %}class="active"{% endif %}></li>
    {% endfor %}
  </ol>

  <!-- Carousel items -->
  <div class="carousel-inner" role="listbox">
    {% for banner in range(1, 2) %}
    <div class="item {% if banner == 1 %}active{% endif %}">
      <img src="{{ asset('img/carousel/banner-'~banner~'.jpg') }}" alt="" style="height:520px;width:100%;object-fit:cover">
      {% if banner == 1 %}
        <div class="carousel-caption"><h1>Symfony Force Edition</h1></div>
      {% endif %}
    </div>
    {% endfor %}
  </div>

  <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

{% endblock %}
