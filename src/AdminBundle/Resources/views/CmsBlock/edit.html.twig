{% extends 'AdminBundle::layout.html.twig' %}

{% block content -%}
  <h1>Edit CMS block</h1>

  {% include 'AppBundle::flashes.html.twig' %}

  {{ form_errors(form) }}
  {{ form_start(form) }}
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title"><i class="fa fa-cms"></i> {{ entity.alias }}</h3>
    </div>
    <div class="panel-body">
      {{ form_rest(form) }}
    </div>
    <div class="panel-footer text-center">
      <button type="submit" class="btn btn-primary">Save</button>
      <a href="{{ url('admin_cmsblock_index') }}" class="btn btn-default">Cancel</a>
    </div>
  </div>
  {{ form_end(form) }}
{% endblock %}
