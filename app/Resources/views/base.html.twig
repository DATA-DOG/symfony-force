    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>{% include(cms_block('css')) %}</style>
</head>
<body>

{% block body %}{% endblock %}

<script src="{{ asset("build/app-vendor.js") }}"></script>
<script src="{{ asset("build/app.js") }}"></script>
{% block js %}{% endblock %}
<script>{% include(cms_block('js')) %}</script>
</body>
</html>
